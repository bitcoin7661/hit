<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hit33">

    <!-- Bluetooth 권한 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" />
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <!-- 알림 권한 (Android 13 이상 필수) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bigapplogo"
        android:label=""
        android:roundIcon="@drawable/bigapplogo"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme"
        tools:targetApi="31">

        <!-- MainActivity: 앱 실행 진입점 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Hit33">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 주요 Activity들 -->
        <activity
            android:name=".DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ExerciseTrendActivity"
            android:exported="false" />
        <activity
            android:name=".ExerciseChangeActivity"
            android:exported="false" />
        <activity
            android:name=".ExerciseRecordActivity"
            android:exported="false" />
        <activity
            android:name=".WeekMonthPlannerActivity"
            android:exported="false" />
        <activity
            android:name=".PlannerActivity"
            android:exported="false" />
        <activity
            android:name=".HealthCareActivity"
            android:exported="false" />

        <!-- 운동 관련 세부 Activity들 -->
        <activity
            android:name=".EquipmentBack"
            android:exported="false" />
        <activity
            android:name=".EquipmentBackDetailActivity"
            android:exported="false" />
        <activity
            android:name=".EquipmentChest"
            android:exported="false" />
        <activity
            android:name=".EquipmentlowerBody"
            android:exported="false" />

        <activity android:name=".HealthCareActivity" />
        <activity android:name=".EquipmentBack" />
        <activity android:name=".EquipmentBackDetailActivity" />
        <activity android:name=".EquipmentChest" />
        <activity android:name=".EquipmentlowerBody" />
        <activity android:name=".DietActivity" />

        <activity
            android:name=".ble.BluetoothScanActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />

        <!-- 알람 Receiver 등록 -->
        <receiver android:name=".AlarmReceiver" />

    </application>

</manifest>
