<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주간/월간 플래너"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:paddingBottom="8dp" />

    <!-- Calendar View -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Text Input for Memo -->
    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="요일을 선택하고 메모를 입력하세요"
        android:backgroundTint="#CCCCCC"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- Button for Navigation to Exercise Record -->
    <Button
        android:id="@+id/navigateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 기록 바로가기"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Button for Navigation to Exercise Change -->
    <Button
        android:id="@+id/changeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 현황 바로가기"
        android:backgroundTint="#46B64A"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_gravity="center" />

</LinearLayout>

